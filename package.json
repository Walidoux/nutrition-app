{
  "name": "@nutrition-app/core",
  "private": true,
  "workspaces": [
    "apps/server",
    "apps/mobile"
  ],
  "scripts": {
    "dev:server": "bun run -C apps/server dev",
    "dev:mobile": "bunx --bun -C apps/mobile expo start",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down -v",
    "db:migrate": "bun run -C apps/server migrate"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "typescript": "^5.6.2"
  }
}
